 <assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <!-- Left blank to avoid a suffix in the output subdirectory name. -->
  <id></id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  
  
    <!-- the README.txt is explicitly copied to allow filtering (to replace a placeholder
    with the current version. -->     
  <files>
    <file>
      <source>src/main/resources/topleveldocs/README.txt</source>
      <outputDirectory></outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  
  
  <fileSets>

      <!--  The documentation placed in the top-level folder of the Anchor distribution -->
     <fileSet>
        <directory>src/main/resources/topleveldocs</directory>
        <outputDirectory></outputDirectory>
        <fileMode>0644</fileMode>
        <lineEnding>lf</lineEnding>
        <excludes>
          <!-- This corrects a bug where .formatted files are outputed alongside the intended files. -->
		<exclude>*.formatted</exclude>
         <exclude>README.txt</exclude>
		</excludes>        
     </fileSet>
     
     
     <fileSet>
        <directory>src/main/resources/config</directory>
        <outputDirectory>config</outputDirectory>
        <fileMode>0644</fileMode>
        <lineEnding>lf</lineEnding>
        <excludes>
          <!-- This corrects a bug where .formatted files are outputed alongside the intended files. -->
		<exclude>*.formatted</exclude>
		</excludes>        
     </fileSet>
  
  
  	 <!--  The helper-apps used to allow easy start of the path-pattern-finder command line tool on different platforms -->
  	 
  	 <!-- Let's exclude the UNIX scripts we want to change permissions on -->
     <fileSet>
        <directory>src/main/resources/helperapps</directory>
        <outputDirectory>bin</outputDirectory>
        <excludes>
        	<exclude>path-pattern-finder</exclude>
        </excludes>
		<fileMode>0755</fileMode>
     </fileSet>
     
     
     <fileSet>
        <directory>src/main/resources/helperapps</directory>
        <outputDirectory>bin</outputDirectory>
        <includes>
        	<include>path-pattern-finder.exe</include>
        </includes>
        <fileMode>0644</fileMode>
     </fileSet>
     
          <!-- Let's include the Windows exes -->
     <fileSet>
        <directory>target/windowsExe</directory>
        <outputDirectory>bin</outputDirectory>
        <includes>
        	<include>path-pattern-finder.exe</include>
        </includes>
        <fileMode>0644</fileMode>
     </fileSet>
     
     <!-- Let's include the UNIX scripts we want to change permissions on -->
     <fileSet>
        <directory>src/main/resources/helperapps</directory>
        <outputDirectory>bin</outputDirectory>
        <includes>
        	<include>path-pattern-finder</include>
        </includes>
        <fileMode>0755</fileMode>
         <lineEnding>lf</lineEnding>
     </fileSet>
    <!--  We put this last, as it seems to use the last fileMode as the default for the next -->
     
     
  </fileSets>
    
  <dependencySets>

	<!--  All the dependencies needed, apart those belonging to our project -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib</outputDirectory>
      <excludes>
      	<exclude>com.owenfeehan.pathpatternfinder:*:*</exclude>
      </excludes>
      <fileMode>0644</fileMode>
    </dependencySet>
    
    <!--  The path-pattern-finder jar is placed in bin folder. They are simple apps used to start
      anchor from the command-line, or to start the anchor GUI -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>bin</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <includes>
      	<include>com.owenfeehan.pathpatternfinder:*:*</include>
      </includes>
      <fileMode>0644</fileMode>
    </dependencySet>
    
  </dependencySets>

 </assembly>